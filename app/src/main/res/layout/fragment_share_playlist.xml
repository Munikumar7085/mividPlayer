<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Theme_bg"
        tools:context=".fragments.startupslides.SharePlaylistFragment">

        <ImageView
            android:id="@+id/image_enjoy_music"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_share_playlist"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_enjoy_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Share your\nplaylist"
            android:layout_marginStart="34dp"
            android:textAppearance="@style/enjoy_your_music"
            app:layout_constraintTop_toBottomOf="@id/image_enjoy_music" />

        <TextView
            android:id="@+id/quotation_enjoy_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="34dp"
            android:text="Share your favorite music playlist with your friends and family."
            android:textAppearance="@style/the_background"
            app:layout_constraintTop_toBottomOf="@id/title_enjoy_music" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quotation_enjoy_music">


            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_unmarked_polygon" />
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_unmarked_polygon" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_marked_polygon" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="207dp"
            android:layout_height="76dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">



            <View
                android:layout_width="207dp"
                android:layout_height="76dp"
                android:background="@drawable/dashed_rectangular"

                />

            <androidx.cardview.widget.CardView
                android:layout_width="179dp"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="40dp"
                android:elevation="5dp"
                >
                <Button
                    android:id="@+id/getStart"
                    android:layout_width="179dp"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bnt_background_skin"
                    android:text="Get Start"
                    android:textAllCaps="false"
                    android:textAppearance="@style/skip"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>