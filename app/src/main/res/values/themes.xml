<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MividPlayer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#041F1E</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:editTextColor">@color/bordercolor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/Theme_bg</item>

    </style>

    <style name="enjoy_your_music">

        <item name="android:textSize">
            36sp
        </item>

        <item name="android:textColor">
            #041F1E
        </item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="the_background">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #6D81A1
        </item>

    </style>
    <style name="welcome_to">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:textColor">
            #6D81A1
        </item>

    </style>
    <style name="skip">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            #6D81A1
        </item>

        <item name="android:shadowColor">
            #406D81A1
        </item>

        <item name="android:shadowDx">
            2
        </item>

        <item name="android:shadowDy">
            2
        </item>

        <item name="android:shadowRadius">
            4
        </item>

    </style>
    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">16dp</item>


    </style>
    <style name="playerImageShappe">
        <item name="neumorph_cornerFamily">oval</item>



    </style>
    <style name="don_t_have">

        <item name="android:textSize">
            20sp
        </item>
        <item name="android:shadowColor">
            #406D81A1
        </item>

        <item name="android:shadowDx">
            2
        </item>

        <item name="android:shadowDy">
            2
        </item>

        <item name="android:shadowRadius">
            4
        </item>

    </style>
    <style name="ThemeOverlay.SearchView" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">@color/text_color</item>
        <!-- Hint text color -->
        <item name="android:textColorHint"> #6D81A1</item>

    </style>


</resources>