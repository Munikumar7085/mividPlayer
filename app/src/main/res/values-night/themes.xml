<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MividPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/skin</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/skin</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#515555</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.MividPlayer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
    <style name="custom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="statusBarBackground">@color/Theme_bg</item>
        <item name="materialAlertDialogTheme">@color/Theme_bg</item>
    </style>
</resources>